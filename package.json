{
  "name": "omnicore-markdown-viewer",
  "version": "1.10.3",
  "description": "Omnicore Markdown Viewer - A sleek cross-platform markdown viewer with Mermaid support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis",
    "build-all": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-linux-appimage": "electron-builder --linux AppImage",
    "build-linux-deb": "electron-builder --linux deb",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "markdown",
    "viewer",
    "electron",
    "mermaid",
    "omnicore"
  ],
  "author": {
    "name": "Omnicore",
    "email": "info@omnicore.com.tr"
  },
  "license": "MIT",
  "homepage": "https://www.omnicore.com.tr",
  "repository": {
    "type": "git",
    "url": "https://github.com/OmniCoreST/omnicore-markdown-viewer.git"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "dompurify": "^3.0.6",
    "electron-updater": "^6.1.7",
    "html-to-docx": "^1.8.0",
    "html2canvas": "^1.4.1",
    "marked": "^9.1.6",
    "mermaid": "^10.6.1",
    "prismjs": "^1.30.0"
  },
  "build": {
    "appId": "com.omnicore.markdownviewer",
    "productName": "Omnicore Markdown Viewer",
    "publish": {
      "provider": "github",
      "owner": "OmniCoreST",
      "repo": "omnicore-markdown-viewer"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "renderer.js",
      "styles.css",
      "logo.ico",
      "logo.png",
      "logo_dark.png",
      "omnicore_ico.png",
      "file-icon.png",
      "file-icon.ico",
      "corporate-logo.png",
      "libs/**/*",
      "omniwire/**/*",
      "omniware-config.js",
      "utils.js",
      "mermaid-config.js",
      "context-menu-utils.js",
      "notification-helpers.js",
      "file-helpers.js",
      "node_modules/**/*",
      "!**/*.md",
      "!dist/**/*",
      "!release-artifacts/**/*",
      "!linux-builds/**/*",
      "!ss/**/*",
      "!tmp/**/*",
      "!.github/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logo.ico",
      "sign": null,
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown Document",
          "description": "Markdown Document",
          "icon": "file-icon.ico",
          "role": "Viewer"
        },
        {
          "ext": "mmd",
          "name": "Mermaid Diagram",
          "description": "Mermaid Diagram File",
          "icon": "file-icon.ico",
          "role": "Viewer"
        },
        {
          "ext": "mermaid",
          "name": "Mermaid Diagram",
          "description": "Mermaid Diagram File",
          "icon": "file-icon.ico",
          "role": "Viewer"
        },
        {
          "ext": "ow",
          "name": "OmniWare Wireframe",
          "description": "OmniWare Wireframe File",
          "icon": "file-icon.ico",
          "role": "Viewer"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "logo.png",
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown Document",
          "description": "Markdown Document",
          "icon": "file-icon.png",
          "role": "Viewer"
        },
        {
          "ext": "mmd",
          "name": "Mermaid Diagram",
          "description": "Mermaid Diagram File",
          "icon": "file-icon.png",
          "role": "Viewer"
        },
        {
          "ext": "mermaid",
          "name": "Mermaid Diagram",
          "description": "Mermaid Diagram File",
          "icon": "file-icon.png",
          "role": "Viewer"
        },
        {
          "ext": "ow",
          "name": "OmniWare Wireframe",
          "description": "OmniWare Wireframe File",
          "icon": "file-icon.png",
          "role": "Viewer"
        }
      ]
    },
    "nsis": {
      "artifactName": "Omnicore-Markdown-Viewer-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "Omnicore-Markdown-Viewer-${version}.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility",
      "maintainer": "Omnicore <info@omnicore.com.tr>",
      "icon": "omnicore_ico.png",
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown Document",
          "description": "Markdown Document",
          "mimeType": "text/markdown",
          "icon": "file-icon.png"
        },
        {
          "ext": "mmd",
          "name": "Mermaid Diagram",
          "description": "Mermaid Diagram File",
          "mimeType": "text/x-mermaid",
          "icon": "file-icon.png"
        },
        {
          "ext": "mermaid",
          "name": "Mermaid Diagram",
          "description": "Mermaid Diagram File",
          "mimeType": "text/x-mermaid",
          "icon": "file-icon.png"
        },
        {
          "ext": "ow",
          "name": "OmniWare Wireframe",
          "description": "OmniWare Wireframe File",
          "mimeType": "text/x-omniware",
          "icon": "file-icon.png"
        }
      ]
    }
  }
}
