{
  "name": "omnicore-markdown-viewer",
  "version": "1.2.0",
  "description": "Omnicore Markdown Viewer - A sleek cross-platform markdown viewer with Mermaid support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis",
    "build-all": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-linux-appimage": "electron-builder --linux AppImage",
    "build-linux-deb": "electron-builder --linux deb"
  },
  "keywords": [
    "markdown",
    "viewer",
    "electron",
    "mermaid",
    "omnicore"
  ],
  "author": {
    "name": "Omnicore",
    "email": "info@omnicore.com.tr"
  },
  "license": "MIT",
  "homepage": "https://www.omnicore.com.tr",
  "repository": {
    "type": "git",
    "url": "https://github.com/OmniCoreST/omnicore-markdown-viewer.git"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "dompurify": "^3.0.6",
    "marked": "^9.1.6",
    "mermaid": "^10.6.1",
    "prismjs": "^1.30.0"
  },
  "build": {
    "appId": "com.omnicore.markdownviewer",
    "productName": "Omnicore Markdown Viewer",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "renderer.js",
      "styles.css",
      "logo.ico",
      "logo.png",
      "omnicore_ico.png",
      "libs/**/*",
      "node_modules/**/*",
      "!**/*.md",
      "!dist/**/*",
      "!release-artifacts/**/*",
      "!linux-builds/**/*",
      "!ss/**/*",
      "!tmp/**/*",
      "!.github/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logo.ico",
      "sign": null,
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown Document",
          "description": "Markdown Document",
          "icon": "logo.ico",
          "role": "Viewer"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "logo.png"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility",
      "maintainer": "Omnicore <info@omnicore.com.tr>",
      "icon": "omnicore_ico.png",
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown Document",
          "description": "Markdown Document",
          "mimeType": "text/markdown"
        }
      ]
    }
  }
}
