{
  "name": "omnicore-markdown-viewer",
  "displayName": "Omnicore Markdown Viewer",
  "description": "Rich markdown preview with Mermaid diagrams, OmniWare wireframes, interactive tables (Tabulator.js), and PrismJS syntax highlighting",
  "version": "1.0.0",
  "publisher": "omnicore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OmniCoreST/omnicore-markdown-viewer.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "Visualization"],
  "keywords": ["markdown", "mermaid", "preview", "omniware", "tabulator"],
  "icon": "media/icons/logo.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:mermaid",
    "onCommand:omnicore.openPreview",
    "onCommand:omnicore.openPreviewToSide"
  ],
  "contributes": {
    "commands": [
      {
        "command": "omnicore.openPreview",
        "title": "Omnicore: Open Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "omnicore.openPreviewToSide",
        "title": "Omnicore: Open Preview to the Side",
        "icon": "$(open-preview)"
      },
      {
        "command": "omnicore.toggleBold",
        "title": "Omnicore: Toggle Bold"
      },
      {
        "command": "omnicore.toggleItalic",
        "title": "Omnicore: Toggle Italic"
      },
      {
        "command": "omnicore.toggleCode",
        "title": "Omnicore: Toggle Code"
      },
      {
        "command": "omnicore.toggleList",
        "title": "Omnicore: Toggle List"
      },
      {
        "command": "omnicore.removeFormatting",
        "title": "Omnicore: Remove Formatting"
      },
      {
        "command": "omnicore.recentFiles.clear",
        "title": "Clear All",
        "icon": "$(clear-all)"
      },
      {
        "command": "omnicore.recentFiles.remove",
        "title": "Remove from Recent",
        "icon": "$(close)"
      },
      {
        "command": "omnicore.recentFiles.openContainingFolder",
        "title": "Open Containing Folder"
      },
      {
        "command": "omnicore.recentFiles.copyPath",
        "title": "Copy Path"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown || resourceExtname == .mmd || resourceExtname == .mermaid || resourceExtname == .ow",
          "command": "omnicore.openPreviewToSide",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "omnicore.recentFiles.clear",
          "when": "view == omnicoreRecentFiles",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "omnicore.recentFiles.remove",
          "when": "view == omnicoreRecentFiles",
          "group": "inline"
        },
        {
          "command": "omnicore.recentFiles.openContainingFolder",
          "when": "view == omnicoreRecentFiles"
        },
        {
          "command": "omnicore.recentFiles.copyPath",
          "when": "view == omnicoreRecentFiles"
        }
      ]
    },
    "keybindings": [
      {
        "command": "omnicore.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == markdown || resourceExtname == .mmd || resourceExtname == .mermaid || resourceExtname == .ow"
      },
      {
        "command": "omnicore.openPreviewToSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "resourceLangId == markdown || resourceExtname == .mmd || resourceExtname == .mermaid || resourceExtname == .ow"
      },
      {
        "command": "omnicore.toggleBold",
        "key": "ctrl+b",
        "mac": "cmd+b",
        "when": "editorTextFocus && resourceLangId == markdown"
      },
      {
        "command": "omnicore.toggleItalic",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus && resourceLangId == markdown"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "omnicoreExplorer",
          "title": "Omnicore",
          "icon": "media/icons/logo.png"
        }
      ]
    },
    "views": {
      "omnicoreExplorer": [
        {
          "id": "omnicoreRecentFiles",
          "name": "Recent Files"
        }
      ]
    },
    "languages": [
      {
        "id": "mermaid",
        "extensions": [".mmd", ".mermaid"],
        "aliases": ["Mermaid Diagram"]
      },
      {
        "id": "omniware",
        "extensions": [".ow"],
        "aliases": ["OmniWare Wireframe"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.config.mjs --production",
    "compile": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
  }
}
